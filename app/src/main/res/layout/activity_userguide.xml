<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userguide">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="How to use this application ?"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvGuide"
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/howtouse"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="Blood Pressure"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/bloodpressure"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="Heartbeats of Fetus"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/heartbeat"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="Cervix Length"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/cervixlength"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="Amniotic Fluid"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/af"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="Fetus Position"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/fp"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="Placenta Position"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/pp"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:text="View Records"
            android:background="@drawable/border3"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="@string/viewrecords"
            android:background="@drawable/border2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>